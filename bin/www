#!/usr/bin/env node

/**
 * Module dependencies.
 */

var fs = require('fs')
var AmqpManager = require('../managers/amqp_manager');
var SocketManager = require('../managers/socket_manager');

AmqpManager.getInstance().connect();

var port = normalizePort(process.env.PORT || '3000');
const options = {
  key: fs.readFileSync('certs/ca.key'),
  cert: fs.readFileSync('certs/3c20cfc256e0b8d6.crt')
};
SocketManager.getInstance().addHandler(require('../handlers/room_handler'));
SocketManager.getInstance().start(port, options);

/**
 * Normalize a port into a number, string, or false.
 */

function normalizePort(val) {
  var port = parseInt(val, 10);

  if (isNaN(port)) {
    // named pipe
    return val;
  }

  if (port >= 0) {
    // port number
    return port;
  }

  return false;
}